{
	// prettier
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	// eslint
	"eslint.validate": ["javascript", "typescript", "svelte", "html"],
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	// see: https://github.com/tailwindlabs/tailwindcss-intellisense?tab=readme-ov-file#tailwind-css-v4x-css-entrypoints
	"tailwindCSS.experimental.configFile": "./src/app.css",
	"tailwindCSS.includeLanguages": {
		"svelte": "html"
	}
}

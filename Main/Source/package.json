{
	"name": "encuestas",
	"private": true,
	"version": "1.2.2",
	"type": "module",
	"packageManager": "pnpm@9.15.1",
	"engines": {
		"node": ">=22.18.0 <23"
	},
	"volta": {
		"node": "22.18.0",
		"pnpm": "9.15.1",
		"npm": "11.5.2"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:all": "pnpm run format && eslint . --fix && pnpm run check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm run test:unit -- --run && pnpm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker-compose -f docker/docker-compose.yaml up",
		"db:purge": "docker-compose -f docker/docker-compose.yaml down -v",
		"db:reset": "prisma migrate reset",
		"db:status": "prisma migrate status",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:seed": "tsx prisma/seed.ts",
		"postinstall": "prisma generate"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.8",
		"@eslint/js": "^9.33.0",
		"@opensas/sveltekit-adapter-node-iis": "0.3.0",
		"@playwright/test": "^1.51.1",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.20.3",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^24.3.0",
		"autoprefixer": "^10.4.21",
		"bits-ui": "1.0.0-next.77",
		"clsx": "^2.1.1",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.11.0",
		"globals": "^15.15.0",
		"lucide-svelte": "^0.469.0",
		"mode-watcher": "^0.5.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.25.6",
		"svelte-check": "^4.1.5",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.19.4",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.29.0",
		"vite": "^6.2.5",
		"vitest": "^2.1.9"
	},
	"prisma": {
		"seed": "pnpx tsx prisma/seed.ts"
	},
	"dependencies": {
		"@prisma/client": "^6.8.2",
		"prisma": "^6.8.2"
	}
}

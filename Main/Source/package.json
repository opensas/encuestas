{
	"name": "encuestas",
	"private": true,
	"version": "1.3.2",
	"type": "module",
	"packageManager": "pnpm@9.15.1",
	"engines": {
		"node": ">=22.18.0 <23"
	},
	"volta": {
		"node": "22.18.0",
		"pnpm": "9.15.1",
		"npm": "11.5.2"
	},
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "cross-env ADAPTER=iis vite build",
		"build:exe": "cross-env ADAPTER=exe vite build",
		"build:vercel": "cross-env ADAPTER=auto vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:all": "npm run format && eslint . --fix && npm run check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:vite",
		"test:unit": "vitest --project=unit-tests",
		"test:ui": "vitest --project=ui-tests --browser.headless",
		"test:vite": "vitest --browser.headless --run",
		"test:all": "npm run test:vite & npm run test:play & wait",
		"test:e2e": "playwright test --project=e2e-tests",
		"test:api": "playwright test --project=api-tests",
		"test:play": "playwright test",
		"db:start": "docker compose -f docker/docker-compose.yaml up",
		"db:purge": "docker compose -f docker/docker-compose.yaml down -v",
		"db:reset": "prisma migrate reset",
		"db:status": "prisma migrate status",
		"db:migrate": "prisma migrate deploy",
		"db:migrate:sync": "prisma migrate dev",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:seed": "prisma db seed",
		"postinstall": "prisma generate"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.36.0",
		"@internationalized/date": "^3.8.1",
		"@jesterkit/exe-sveltekit": "^0.1.4",
		"@lucide/svelte": "^0.515.0",
		"@opensas/sveltekit-adapter-node-iis": "^0.4.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.42.2",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^24.5.2",
		"@vitest/browser": "^3.2.3",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"cross-env": "^10.0.0",
		"dotenv": "^17.2.2",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"micromark": "^4.0.2",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.39.3",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.20.5",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@prisma/client": "^6.16.2",
		"prisma": "^6.16.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
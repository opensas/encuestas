{
	"name": "encuestas",
	"private": true,
	"version": "1.3.3",
	"type": "module",
	"packageManager": "pnpm@9.15.1",
	"engines": {
		"node": ">=22.18.0 <23"
	},
	"volta": {
		"node": "22.18.0",
		"pnpm": "9.15.1",
		"npm": "11.5.2"
	},
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "cross-env ADAPTER=iis vite build",
		"build:exe": "cross-env ADAPTER=exe vite build",
		"build:vercel": "cross-env ADAPTER=auto vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:all": "npm run format && eslint . --fix && npm run check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "npm run test:vite",
		"test:unit": "vitest --project=unit-tests",
		"test:ui": "vitest --project=ui-tests --browser.headless",
		"test:vite": "vitest --browser.headless --run",
		"test:all": "npm run test:vite & npm run test:play",
		"test:e2e": "playwright test --project=e2e-tests",
		"test:api": "playwright test --project=api-tests",
		"test:play": "playwright test",
		"db:start": "docker compose -f docker/docker-compose.yaml up",
		"db:purge": "docker compose -f docker/docker-compose.yaml down -v",
		"db:reset": "prisma migrate reset",
		"db:status": "prisma migrate status",
		"db:migrate": "prisma migrate deploy",
		"db:migrate:sync": "prisma migrate dev",
		"db:studio": "prisma studio",
		"db:generate": "npm run prepare && prisma generate",
		"db:seed": "prisma db seed",
		"postinstall": "npm run db:generate"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.39.1",
		"@internationalized/date": "^3.10.0",
		"@jesterkit/exe-sveltekit": "^0.1.7",
		"@lucide/svelte": "^0.561.0",
		"@opensas/sveltekit-adapter-node-iis": "^0.4.0",
		"@playwright/test": "^1.57.0",
		"@prisma/adapter-mssql": "^7.3.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^22.19.7",
		"@vitest/browser-playwright": "^4.0.17",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"micromark": "^4.0.2",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.57.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"prisma": "^7.3.0",
		"svelte": "^5.47.1",
		"svelte-check": "^4.3.4",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.2.6",
		"vitest": "^4.0.17",
		"vitest-browser-svelte": "^2.0.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@prisma/client": "^7.2.0"
	}
}

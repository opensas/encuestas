{
	"name": "encuestas",
	"private": true,
	"version": "1.2.4",
	"type": "module",
	"packageManager": "pnpm@9.15.1",
	"engines": {
		"node": ">=22.18.0 <23"
	},
	"volta": {
		"node": "22.18.0",
		"pnpm": "9.15.1",
		"npm": "11.5.2"
	},
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"build:exe": "cross-env ADAPTER=exe vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"check:all": "npm run format && eslint . --fix && npm run check",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest --browser.headless --run && npm run test:e2e",
		"test:unit": "vitest --project=server",
		"test:ui": "vitest --project=client --browser.headless",
		"test:vite": "vitest --browser.headless --run",
		"test:all": "npm run test:vite && npm run test:e2e",
		"test:e2e": "playwright test",
		"db:start": "docker-compose -f docker/docker-compose.yaml up",
		"db:purge": "docker-compose -f docker/docker-compose.yaml down -v",
		"db:reset": "prisma migrate reset",
		"db:status": "prisma migrate status",
		"db:studio": "prisma studio",
		"db:generate": "prisma generate",
		"db:seed": "tsx prisma/seed.ts",
		"postinstall": "prisma generate"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@jesterkit/exe-sveltekit": "^0.1.4",
		"@opensas/sveltekit-adapter-node-iis": "^0.4.0",
		"@playwright/test": "^1.55.0",
		"@sveltejs/kit": "^2.40.0",
		"@sveltejs/vite-plugin-svelte": "^5.1.1",
		"@types/node": "^24.5.0",
		"@vitest/browser": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"bits-ui": "1.0.0-next.77",
		"clsx": "^2.1.1",
		"cross-env": "^10.0.0",
		"dotenv": "^17.2.2",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.12.3",
		"globals": "^15.15.0",
		"lucide-svelte": "^0.469.0",
		"mode-watcher": "^0.5.1",
		"playwright": "^1.55.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"vite": "^6.3.6",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^0.1.0"
	},
	"prisma": {
		"seed": "npx tsx prisma/seed.ts"
	},
	"dependencies": {
		"@prisma/client": "^6.16.1",
		"prisma": "^6.16.1"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
